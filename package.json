{
	"name": "vite-plugin-iife",
	"version": "2.0.0",
	"description": "Vite plugin for simple IIFE-compiled script imports.",
	"keywords": [
		"vite-plugin",
		"iife",
		"vite",
		"import",
		"npm-package"
	],
	"homepage": "https://github.com/kitschpatrol/vite-plugin-iife",
	"bugs": "https://github.com/kitschpatrol/vite-plugin-iife/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/vite-plugin-iife.git"
	},
	"license": "MIT",
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./ext": {
			"types": "./ext.d.ts"
		}
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"./ext.d.ts",
		"dist"
	],
	"scripts": {
		"build": "tsx ./scripts/build-plugin.ts && tsc -p tsconfig.plugin.json",
		"clean": "git rm -f pnpm-lock.yaml ; git clean -fdX",
		"fix": "kpi fix",
		"lint": "kpi lint",
		"release": "bumpp --commit 'Release: %s' && pnpm run build && pnpm publish --otp $(op read 'op://Personal/Npmjs/one-time password?attribute=otp')",
		"test": "vitest"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^5.6.0",
		"@types/node": "^20.19.11",
		"@vitest/browser": "^3.2.4",
		"bumpp": "^10.2.3",
		"esbuild": "^0.25.9",
		"playwright": "^1.55.0",
		"pretty-bytes": "^7.0.1",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vite": "^7.1.4",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
	},
	"packageManager": "pnpm@10.15.1",
	"engines": {
		"node": ">=20.19.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
