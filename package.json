{
	"name": "vite-plugin-iife",
	"version": "1.2.0",
	"description": "Vite plugin for simple IIFE-compiled script imports.",
	"keywords": [
		"vite-plugin",
		"iife",
		"vite",
		"import",
		"npm-package"
	],
	"homepage": "https://github.com/kitschpatrol/vite-plugin-iife",
	"bugs": "https://github.com/kitschpatrol/vite-plugin-iife/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/vite-plugin-iife.git"
	},
	"license": "MIT",
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./ext": {
			"types": "./ext.d.ts"
		}
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"./ext.d.ts",
		"dist"
	],
	"scripts": {
		"build": "tsx ./scripts/build-plugin.ts && tsc -p tsconfig.plugin.json",
		"clean": "git rm -f pnpm-lock.yaml ; git clean -fdX",
		"fix": "kpi fix",
		"lint": "kpi lint",
		"release": "bumpp --commit 'Release: %s' && pnpm run build && pnpm publish --otp $(op read 'op://Personal/Npmjs/one-time password?attribute=otp')",
		"test": "vitest"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^5.2.0",
		"@types/node": "^18.19.79",
		"@vitest/browser": "^3.0.7",
		"bumpp": "^10.0.3",
		"esbuild": "^0.25.0",
		"playwright": "^1.50.1",
		"pretty-bytes": "^6.1.1",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"vite": "^6.2.0",
		"vitest": "^3.0.7"
	},
	"peerDependencies": {
		"vite": "^5.0.0 || ^6.0.0"
	},
	"packageManager": "pnpm@10.5.2",
	"engines": {
		"node": ">=18.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"msw",
			"puppeteer"
		],
		"overrides": {
			"eslint-plugin-markdown": "^5.1.0"
		}
	}
}
