{
	"name": "vite-plugin-iife",
	"version": "2.0.1",
	"description": "Vite plugin for simple IIFE-compiled script imports.",
	"keywords": [
		"vite-plugin",
		"iife",
		"vite",
		"import",
		"npm-package"
	],
	"homepage": "https://github.com/kitschpatrol/vite-plugin-iife",
	"bugs": "https://github.com/kitschpatrol/vite-plugin-iife/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/vite-plugin-iife.git"
	},
	"license": "MIT",
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./ext": {
			"types": "./ext.d.ts"
		}
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"./ext.d.ts",
		"dist"
	],
	"scripts": {
		"build": "tsx ./scripts/build-plugin.ts && tsc -p tsconfig.plugin.json",
		"clean": "git rm -f pnpm-lock.yaml ; git clean -fdX",
		"fix": "ksc fix",
		"lint": "ksc lint",
		"release": "bumpp --commit 'Release: %s' && pnpm run build && NPM_AUTH_TOKEN=$(op read 'op://Personal/npm/token') && pnpm publish",
		"test": "vitest"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^5.8.1",
		"@types/node": "^20.19.24",
		"@vitest/browser-playwright": "^4.0.7",
		"bumpp": "^10.3.1",
		"esbuild": "^0.25.12",
		"playwright": "^1.56.1",
		"pretty-bytes": "^7.1.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vite": "^7.1.12",
		"vitest": "^4.0.7"
	},
	"peerDependencies": {
		"vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
	},
	"packageManager": "pnpm@10.20.0",
	"engines": {
		"node": ">=20.19.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
